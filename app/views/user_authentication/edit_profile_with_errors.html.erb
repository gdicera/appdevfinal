<div >
  <h5>
    Edit User Account
  </h5>

  <% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
  <% end %>
  <div>
    <form action="/modify_user" method="post">
              
      <div>
        <label for="email_box">Email</label>
          
        <input id="email_box" name="query_email" value="<%= @current_user.email %>">
          
      </div>
                                    
      <div>
        <label for="first_name_box">First name</label>
          
        <input id="first_name_box" name="query_first_name" value="<%= @current_user.first_name %>">
          
      </div>
                      
      <div>
        <label for="last_name_box">Last name</label>
          
        <input id="last_name_box" name="query_last_name" value="<%= @current_user.last_name %>">
          
      </div>
                      
      <div>
        <label for="post_id_box">Post</label>
          
        <input id="post_id_box" name="query_post_id" value="<%= @current_user.post_id %>">
          
      </div>
                      
      <div>
        <label for="profile_picture_box">Profile picture</label>
          
        <input id="profile_picture_box" name="query_profile_picture" value="<%= @current_user.profile_picture %>">
          
      </div>
                      
      <div>
        <label for="school_name_box">School name</label>
          
        <input id="school_name_box" name="query_school_name" value="<%= @current_user.school_name %>">
          
      </div>
                      
      <div>
        <label for="liked_posts_count_box">Liked posts count</label>
          
        <input id="liked_posts_count_box" name="query_liked_posts_count" value="<%= @current_user.liked_posts_count %>">
          
      </div>
                      
      <div>
        <label for="posts_count_box">Posts count</label>
          
        <input id="posts_count_box" name="query_posts_count" value="<%= @current_user.posts_count %>">
          
      </div>
                      
      <div>
        <label for="topics_count_box">Topics count</label>
          
        <input id="topics_count_box" name="query_topics_count" value="<%= @current_user.topics_count %>">
          
      </div>
              
      <div>
        <label for="password_box">Password</label>
        <input id="password_box" name="query_password" placeholder="Choose a new password..." type="password">
      </div>
    
      <div>
        <label for="password_confirmation_box">Password Confirmation</label>
        <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your new password..." type="password">
      </div>

      <button>
        Update account
      </button>
    </form>
  </div>
</div>
