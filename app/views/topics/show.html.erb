<div>
  <div>
    <h1>
      Topic #<%= @the_topic.id %> details
    </h1>

    <div>
      <div>
        <a href="/topics">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_topic/<%= @the_topic.id %>">
          Delete topic
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <%= @the_topic.user_id %>
      </dd>

      <dt>
        Post
      </dt>
      <dd>
        <%= @the_topic.post_id %>
      </dd>

      <dt>
        Posts count
      </dt>
      <dd>
        <%= @the_topic.posts_count %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_topic.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_topic.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit topic
    </h2>

    <form action="/modify_topic/<%= @the_topic.id %>"  method="post" >
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_topic.user_id %>">
      </div>

      <div>
        <label for="post_id_box">
          Post
        </label>

        <input type="text" id="post_id_box" name="query_post_id" value="<%= @the_topic.post_id %>">
      </div>

      <div>
        <label for="posts_count_box">
          Posts count
        </label>

        <input type="text" id="posts_count_box" name="query_posts_count" value="<%= @the_topic.posts_count %>">
      </div>

      <button>
        Update topic
      </button>
    </form>
  </div>
</div>

<hr>
